{
  // Left modules

  "custom/launcher": {
    "format": " ",
    "on-click": "pkill rofi || ~/.config/rofi/app/app-launcher.sh",
    "tooltip": false
  },

  "custom/wallpaper": {
    "format": "󰸉 Wallpapers",
    "on-click": "~/.config/rofi/wallpaper/wallpaper-select.sh",
    "interval": 86400, // once every day
    "tooltip": false
  },

  "tray": {
    "icon-size": 20,
    "spacing": 7
  },

  "hyprland/window": {
    "rewrite": {
      "(.*) - kitty": "[$1]"
    },
    "separate-outputs": true
  },

  // Center modules

  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": false,
    "disable-scroll": false,
    "show-special": true,
    "format": "{name}"
  },

  // Right modules

  "custom/notification": {
    "return-type": "json",
    "exec": "~/.config/waybar/scripts/notification.sh",
    "on-click": "dunstctl set-paused toggle",
    "restart-interval": 1
  },

  // group/system

  "network": {
    "on-click": "kitty --class network-floating -e nmtui",
    "format-disconnected": "󰖪 0%",
    "format-ethernet": "󰌗 100%",
    "format-linked": "{ifname} (No IP)",
    "format-wifi": "  {signalStrength}%",
    "tooltip-format": "Connected to {essid} {ifname} via {gwaddr}"
  },

  "memory": {
    "format": "  {percentage}%",
    "format-alt": "  {used} GiB",
    "interval": 5
  },

  "cpu": {
    "format": " {usage}%",
    "format-alt": " {avg_frequency} GHz",
    "interval": 1
  },

  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-icons": {
      "default": [
        "󰕿",
        "󰖀",
        "󰕾"
      ]
    },
    "format-muted": "󰝟",
    "on-click": "pavucontrol",
    "scroll-step": 5
  },

  "clock": {
    "interval": 1,
    "format": " {:%H:%M:%S}",
    "format-alt": " {:%H:%M %b %d %a}",
    "tooltip": "true",
    "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
    "on-click-right": "merkuro-calendar"
  },

  "battery": {
    "on-click": "auto-cpufreq-gtk",
    "bat": "BAT1",
    "states": {
      "interval": 10,
      "good": 95,
      "warning": 30,
      "critical": 5
    },
    "format": "{icon} {capacity}%",
    "format-icons": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
    "format-charging": "󰂄 {capacity}%",
    "tooltip": "true",
    "tooltip-format": "{timeTo}\nPower draw: {power}W\nBattery health: {health}"
  },

  // Groups

  "group/system": {
    "orientation": "horizontal",
    "modules": ["network", "memory", "cpu", "pulseaudio", "battery"]
  },

  "group/toggles": {
    "orientation": "horizontal",
    "modules": ["custom/notification", ""]
  },

  "group/ltray": {
    "orientation": "horizontal",
    "modules": ["custom/notification", ""]
  }
}
